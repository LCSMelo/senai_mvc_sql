@model IEnumerable<cadastro_senai.Dominio.Aluno>   
      
@{   
        ViewData["Title"] = "Index";   
    }   
<h2>Index</h2>   
<p>   
    <a asp-action="Cadastrar">Cadastrar Novo Aluno</a>   
</p>   
<table class="table">   
    <thead>   
        <tr>   
            <th>   
                @Html.DisplayNameFor(model => model.Nome)   
            </th>   
            <th>   
                @Html.DisplayNameFor(model => model.Email)   
            </th>   
            <th>   
                @Html.DisplayNameFor(model => model.Sexo)   
            </th>   
            <th>   
                @Html.DisplayNameFor(model => model.Idade)   
            </th>   
            <th></th>   
        </tr>   
    </thead>   
    <tbody>   
        @foreach (var item in Model)   
        {   
            <tr>   
                <td>   
                    @Html.DisplayFor(modelItem => item.Nome)   
                </td>   
                <td>   
                    @Html.DisplayFor(modelItem => item.Email)   
                </td>   
                <td>   
                    @Html.DisplayFor(modelItem => item.Sexo)   
                </td>   
                <td>   
                    @Html.DisplayFor(modelItem => item.Idade)   
                </td>   
                <td>   
                    <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |   
                    <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a> |   
                    <a asp-action="Excluir" asp-route-id="@item.Id">Excluir</a>   
                </td>   
            </tr>   
        }   
    </tbody>   
</table>